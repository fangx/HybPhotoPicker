<?xml version="1.0" encoding="utf-8"?>
<cn.fxnn.hybphoto.view.PhotoItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="1dip"
        android:scaleType="centerCrop"
        android:src="@color/bg_wc_mask" />

    <View
        android:id="@+id/photo_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_wc_mask"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ck_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_margin="5dip"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/selector_item_checked" />
</cn.fxnn.hybphoto.view.PhotoItemLayout>